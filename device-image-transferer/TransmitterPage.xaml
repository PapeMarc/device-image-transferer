<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="device_image_transferer.TransmitterPage"
             Title="Send Image to desktop Device"
             xmlns:viewmodel="clr-namespace:device_image_transferer.ViewModels"
             x:DataType="viewmodel:TransmitterPageViewModel">
    <VerticalStackLayout>
        <Label 
            Text="This Page will scan a QR-Code and than open the camera. After this you can take a photo and send it to the reciever provided via the QR-Code."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>